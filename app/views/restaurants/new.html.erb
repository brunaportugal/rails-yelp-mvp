<h2>Add your favorite restaurant!</h2>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <br>
  <%= f.label :category %>
  <%= f.collection_select :category, Restaurant::CATEGORIES, :to_s, :to_s %>
  <br>
  <%= f.submit %>
<% end %>
